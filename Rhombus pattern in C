#include <stdio.h>

int main()
{
    int n;
    printf("Enter the number:");
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<2*n-1;j++)
        {
            if(j<n-i-1)
            printf("  ");
            else if(j<2*n-i-1)
            { 
            printf("* "); 
            }
        }
        printf("\n");
    }
    return 0;
}
OUTPUT:
Enter the number:5
        * * * * *
      * * * * *
    * * * * *
  * * * * *
* * * * *
